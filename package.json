{
  "name": "xpub-elife",
  "version": "1.0.0",
  "description": "xpub configured for eLife",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8.9.4",
    "yarn": "^1.10.1"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/xpub/xpub-elife"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "app:browser": "NODE_CONFIG_ENV=test NODE_ENV=production pubsweet migrate; NODE_CONFIG_ENV=test NODE_ENV=production pubsweet server",
    "build": "NODE_ENV=production pubsweet build",
    "build:styleguide": "styleguidist build",
    "clean": "find . -type d -name node_modules -exec rm -rf {} \\;",
    "coverage": "open ./coverage/lcov-report/index.html",
    "cz": "git-cz",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:package",
    "lint:js": "eslint .",
    "lint:package": "format-package -w package.json",
    "lint:style": "stylelint app/**/*.scss app/**/*.css",
    "precommit": "lint-staged",
    "reset": "pubsweet setupdb --clobber",
    "secretcheck": "scripts/secretcheck.sh",
    "start": "docker-compose up",
    "start:app": "pubsweet migrate; pubsweet server",
    "start:services": "docker-compose up -d postgres fakes3 api-dummy",
    "start:styleguide": "docker-compose run --no-deps -p 6060:6060 app yarn run styleguide",
    "stop:services": "docker-compose down -v",
    "styleguide": "styleguidist server",
    "test": "NODE_CONFIG_ENV=unit-test jest --runInBand",
    "test:browser": "NODE_CONFIG_ENV=test NODE_ENV=production testcafe --concurrency 1 \"${BROWSER:-chrome}\" 'test/**/*.browser.js'",
    "test:dependencies": "node scripts/check-duplicate-packages.js react react-dom styled-components pubsweet-server",
    "update": "yarn upgrade-interactive --latest"
  },
  "lint-staged": {
    "*.css": "stylelint",
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.scss": "stylelint",
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 61,
        "lines": 65,
        "statements": -1000
      }
    },
    "projects": [
      "<rootDir>/client",
      "<rootDir>/config/jest.config.js",
      "<rootDir>/packages/component-dashboard/config/jest.config.server.js",
      "<rootDir>/packages/component-dashboard/config/jest.config.client.js",
      "<rootDir>/packages/component-login/config/jest.config.client.js",
      "<rootDir>/packages/component-meca/config/jest.config.server.js",
      "<rootDir>/packages/component-logger/config/jest.config.server.js",
      "<rootDir>/packages/component-model/config/jest.config.server.js",
      "<rootDir>/packages/component-model-audit-log/config/jest.config.server.js",
      "<rootDir>/packages/component-model-manuscript/config/jest.config.server.js",
      "<rootDir>/packages/component-model-file/config/jest.config.server.js",
      "<rootDir>/packages/component-model-semantic-extraction/config/jest.config.server.js",
      "<rootDir>/packages/component-model-user/config/jest.config.server.js",
      "<rootDir>/packages/component-submission/config/jest.config.server.js",
      "<rootDir>/packages/component-submission/config/jest.config.client.js",
      "<rootDir>/packages/component-static-pages/config/jest.config.client.js",
      "<rootDir>/packages/component-elife-app/config/jest.config.server.js",
      "<rootDir>/packages/component-elife-app/config/jest.config.client.js",
      "<rootDir>/packages/component-elife-ui/config/jest.config.client.js"
    ]
  },
  "pre-commit": [
    "precommit",
    "secretcheck"
  ],
  "resolutions": {
    "lodash": ">=4.17.11"
  },
  "workspaces": [
    "client/*",
    "server/*",
    "packages/*"
  ],
  "dependencies": {
    "@elifesciences/elife-theme": "^1.0.0",
    "@pubsweet/component-send-email": "^0.2.13",
    "@pubsweet/models": "^0.2.7",
    "@pubsweet/ui": "^9.0.3",
    "@pubsweet/ui-toolkit": "^2.0.3",
    "@rebass/grid": "^6.0.0-7",
    "apollo-link-state": "^0.4.1",
    "config": "^2.0.1",
    "date-fns": "^1.29.0",
    "formik": "^2.0.0",
    "graphql-tag": "^2.8.0",
    "history": "^4.7.2",
    "html-pdf": "^2.2.0",
    "joi": "^13.6.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.5",
    "newrelic": "^4.8.1",
    "omit-deep-lodash": "^1.1.2",
    "pre-commit": "^1.0.0",
    "prop-types": "^15.6.2",
    "pubsweet": "^4.0.4",
    "pubsweet-client": "^8.0.0",
    "pubsweet-server": "^13.4.3",
    "pug": "^2.0.3",
    "react": "^16.8.6",
    "react-apollo": "^2.1.11",
    "react-autosuggest": "^9.3.4",
    "react-dom": "^16.8.6",
    "react-dropzone": "^4.3.0",
    "react-ga": "^2.5.6",
    "react-google-charts": "^3.0.8",
    "react-hot-loader": "^4.6.3",
    "react-hotjar": "^1.0.11",
    "react-router-dom": "^4.3.1",
    "react-scrolllock": "^3.0.1",
    "react-select": "^2.0.0",
    "react-tabs": "^2.3.0",
    "react-transition-group": "^2.4.0",
    "recompose": "^0.30.0",
    "styled-components": "^4.1.3",
    "uuid": "^3.3.2",
    "xml2json": "^0.11.2",
    "xpub-edit": "^2.5.4",
    "yup": "^0.26.2"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "@yarnpkg/lockfile": "^1.1.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "commitizen": "^2.9.6",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^4.12.0",
    "eslint-config-pubsweet": "^0.0.6",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "flush-promises": "^1.0.2",
    "format-package": "^4.2.0",
    "fs-extra": "^7.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "jest-dom": "^3.5.0",
    "joi-browser": "^13.4.0",
    "lint-staged": "^7.2.2",
    "mime": "^2.3.1",
    "pdf2json": "^1.1.8",
    "prettier": "^1.8.2",
    "react-styleguidist": "^7.1.0",
    "replay": "^2.4.0",
    "string-replace-loader": "^2.1.1",
    "style-loader": "^0.22.1",
    "stylelint": "^9.4.0",
    "stylelint-config-pubsweet": "^0.0.3",
    "testcafe": "^1.2.1",
    "testcafe-browser-provider-browserstack": "^1.5.1",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1"
  }
}
