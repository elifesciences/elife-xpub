{
  "name": "xpub-elife",
  "version": "1.0.0",
  "description": "xpub configured for eLife",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8.9.4",
    "yarn": ">=1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/xpub/xpub-elife"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production pubsweet build",
    "clean": "rm -rf node_modules;rm -rf server/xpub/node_modules",
    "cz": "git-cz",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:package",
    "lint:js": "eslint .",
    "lint:package": "format-package -w package.json",
    "lint:style": "stylelint app/**/*.scss app/**/*.css",
    "precommit": "lint-staged",
    "reset": "pubsweet setupdb --clobber",
    "server": "pubsweet server",
    "setupdb": "pubsweet setupdb",
    "start": "docker-compose up",
    "start:services": "docker-compose up postgres",
    "start:styleguide": "docker-compose run --no-deps -p 6060:6060 app yarn run styleguide",
    "stop:services": "docker-compose down -v",
    "styleguide": "styleguidist server",
    "test": "jest",
    "test:dependencies": "duplicate-module-test react react-dom styled-components pubsweet-server",
    "test:e2e": "NODE_ENV=test testcafe \"${BROWSER:-chrome}\" 'test/**/*.e2e.js'",
    "update": "yarn upgrade-interactive --latest"
  },
  "lint-staged": {
    "*.css": "stylelint",
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.scss": "stylelint",
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "projects": [
      "<rootDir>/client",
      "<rootDir>/app",
      "<rootDir>/server"
    ]
  },
  "resolutions": {
    "styled-system": "2.3.6"
  },
  "workspaces": [
    "client/*",
    "server/*"
  ],
  "dependencies": {
    "@elifesciences/elife-theme": "^1.0.0",
    "@pubsweet/ui": "^8.6.1",
    "@pubsweet/ui-toolkit": "^1.1.3",
    "apollo-link-state": "^0.4.1",
    "config": "^2.0.1",
    "date-fns": "^1.29.0",
    "formik": "^1.0.3",
    "graphql-tag": "^2.8.0",
    "grid-styled": "^4.1.0",
    "history": "^4.7.2",
    "joi": "^13.6.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.5",
    "omit-deep-lodash": "^1.1.2",
    "prop-types": "^15.6.2",
    "pubsweet-client": "^4.2.1",
    "pubsweet-server": "^8.1.0",
    "react": "^16.4.2",
    "react-apollo": "^2.1.11",
    "react-autosuggest": "^9.3.4",
    "react-dom": "^16.4.2",
    "react-dropzone": "^4.3.0",
    "react-hot-loader": "^4.3.4",
    "react-router-dom": "^4.3.1",
    "react-scrolllock": "^3.0.1",
    "react-select": "^2.0.0",
    "react-transition-group": "^2.4.0",
    "recompose": "^0.28.2",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1",
    "styled-components": "^3.4.2",
    "uuid": "^3.3.2",
    "xpub-edit": "^2.4.1",
    "yup": "^0.26.2"
  },
  "devDependencies": {
    "@mapbox/duplicate-module-test": "^0.1.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "commitizen": "^2.9.6",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^4.12.0",
    "eslint-config-pubsweet": "^0.0.6",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "format-package": "^4.2.0",
    "fs-extra": "^7.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "joi-browser": "^13.4.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.8.2",
    "pubsweet": "^2.3.1",
    "react-styleguidist": "^7.1.0",
    "replay": "^2.1.4",
    "string-replace-loader": "^2.1.1",
    "style-loader": "^0.22.1",
    "stylelint": "^9.4.0",
    "stylelint-config-pubsweet": "^0.0.3",
    "testcafe": "^0.21.1",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1"
  }
}
